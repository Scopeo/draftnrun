# Secrets template for ada-staging
# IMPORTANT: Do not commit actual secrets to git!
# Create secrets on cluster using:
#   kubectl create secret generic ada-secrets --from-env-file=.env -n ada-staging
#
# Or apply this template after filling in values:
#   kubectl apply -f secrets.yaml
apiVersion: v1
kind: Secret
metadata:
  name: ada-secrets
  namespace: ada-staging
type: Opaque
stringData:
  # Database
  DATABASE_URL: "postgresql://user:password@host:5432/ada_backend"
  INGESTION_DATABASE_URL: "postgresql://user:password@host:5432/ada_ingestion"
  : "postgresql://user:password@host:5432/ada_traces"

  # Redis
  REDIS_HOST: "redis-host"
  REDIS_PORT: "6379"
  REDIS_PASSWORD: ""

  # Vector DB
  QDRANT_URL: "http://qdrant-host:6333"
  QDRANT_API_KEY: ""

  # LLM APIs (add as needed)
  OPENAI_API_KEY: ""

  # App secrets
  FERNET_KEY: ""
  BACKEND_SECRET_KEY: ""

  # Ingestion
  INGESTION_API_KEY: ""
  INGESTION_API_KEY_HASHED: ""
  
  # Webhook Workers
  WEBHOOK_API_KEY: ""
  WEBHOOK_API_KEY_HASHED: "
  
  API_BASE_URL: "http://ada-api.ada-staging.svc.cluster.local"
  
  # Nango OAuth Server
  NANGO_INTERNAL_URL: "http://nango-server.ada-staging.svc.cluster.local:3003"
  NANGO_PUBLIC_URL: "https://nango-staging.scopeo.studio"
  NANGO_SECRET_KEY: ""  # Generate with: openssl rand -hex 32
  NANGO_ENCRYPTION_KEY: ""  # Generate with: openssl rand -base64 32
  NANGO_DASHBOARD_USERNAME: "admin@draftnrun.com"
  NANGO_DASHBOARD_PASSWORD: ""  # Generate secure password
