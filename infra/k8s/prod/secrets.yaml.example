# Secrets template for ada-prod
# IMPORTANT: Do not commit actual secrets to git!
# Create secrets on cluster using:
#   kubectl create secret generic ada-secrets --from-env-file=.env -n ada-prod
#
apiVersion: v1
kind: Secret
metadata:
  name: ada-secrets
  namespace: ada-prod
type: Opaque
stringData:
  # Database
  DATABASE_URL: "postgresql://user:password@host:5432/ada_backend"
  INGESTION_DATABASE_URL: "postgresql://user:password@host:5432/ada_ingestion"

  # Redis
  REDIS_HOST: "redis-host"
  REDIS_PORT: "6379"
  REDIS_PASSWORD: ""

  # Vector DB
  QDRANT_URL: "http://qdrant-host:6333"
  QDRANT_API_KEY: ""

  # LLM APIs
  OPENAI_API_KEY: ""

  # App secrets
  FERNET_KEY: ""
  BACKEND_SECRET_KEY: ""

  # Ingestion
  INGESTION_API_KEY: ""
  INGESTION_API_KEY_HASHED: ""
  
  # Webhook Workers
  WEBHOOK_API_KEY: ""
  WEBHOOK_API_KEY_HASHED: ""
  
  API_BASE_URL: "http://ada-api.ada-prod.svc.cluster.local"
