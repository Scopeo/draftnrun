# Secrets template for ada-prod
# IMPORTANT: Do not commit actual secrets to git!
# Create secrets on cluster using:
#   kubectl create secret generic ada-secrets --from-env-file=.env -n ada-prod
#
apiVersion: v1
kind: Secret
metadata:
  name: ada-secrets
  namespace: ada-prod
type: Opaque
stringData:
  # Database
  DATABASE_URL: "postgresql://user:password@host:5432/ada_backend"
  INGESTION_DATABASE_URL: "postgresql://user:password@host:5432/ada_ingestion"

  # Redis
  REDIS_HOST: "redis-host"
  REDIS_PORT: "6379"
  REDIS_PASSWORD: ""

  # Vector DB
  QDRANT_URL: "http://qdrant-host:6333"
  QDRANT_API_KEY: ""

  # LLM APIs
  OPENAI_API_KEY: ""

  # App secrets
  FERNET_KEY: ""
  BACKEND_SECRET_KEY: ""

  # Ingestion
  INGESTION_API_KEY: ""
  INGESTION_API_KEY_HASHED: ""

  # Webhook Workers
  WEBHOOK_API_KEY: ""
  WEBHOOK_API_KEY_HASHED: ""

  API_BASE_URL: "http://ada-api.ada-prod.svc.cluster.local"

  # ===========================================
  # Nango OAuth Server (internal only)
  # ===========================================
  # NANGO_INTERNAL_URL: URL that ada-api uses to reach nango-server
  NANGO_INTERNAL_URL: "http://nango-server:3003"

  # NANGO_CALLBACK_URL: Public URL where OAuth providers redirect after auth
  # This should point to ada-api's OAuth callback endpoint
  NANGO_CALLBACK_URL: "https://ada.scopeo.studio/oauth/callback"

  # NANGO_DB_PASSWORD: Password for nango's PostgreSQL database
  # Generate with: openssl rand -hex 16
  NANGO_DB_PASSWORD: ""

  # NANGO_SECRET_KEY: API key for authenticating with Nango
  # Generate with: openssl rand -hex 32
  NANGO_SECRET_KEY: ""

  # NANGO_ENCRYPTION_KEY: Key for encrypting OAuth tokens at rest
  # Generate with: openssl rand -base64 32
  NANGO_ENCRYPTION_KEY: ""

  # Nango dashboard credentials (optional)
  NANGO_DASHBOARD_USERNAME: "admin@draftnrun.com"
  NANGO_DASHBOARD_PASSWORD: ""
